[bar/top_bar];;;{
    monitor = LVDS1 
    ;monitor = HDMI1

    width  = 100%
    height = 20

    background = ${colors.background}
    foreground = ${colors.color1}

    padding-left  = 1
    padding-right = 1

    top = true

    font-0 = Hack:style=Regular:size=8:dpi=138;0
    font-1 = FontAwesome:size=8:dpi=138;0

    tray-background = ${colors.background}
    tray-position = right
    tray-maxsize  = 28

    modules-right  = lan wlan filesystem date
    ;modules-center = i3
    modules-left   = shutdown reboot lock i3

    enable-ipc = true
;;;}

[module/date];;;{
    type = internal/date

    interval = 1.0

    date     = %%{F#477893}%d/%M/%Y%%{F#FF} %%{F#477893}%H:%M:%S%%{F#FF}
    ;date     = %%{F#90477893}%d-%M-%Y%%{F#FF} %%{F#477893}%H:%M:%S%%{F#FF}
    ;date     = %%{F#FBA922}%A%%{F#FF}, %d %B %Y  %H:%M:%S

    format =   <date>
    format-foreground = ${colors.color2}
;;;}

